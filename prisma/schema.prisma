generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  role String
  createdAt DateTime @default(now())
}

model Post {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  title String
  content String @db.LongText
  slug String
  published Boolean
  description String @db.Text
}

model Experience {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  duration String
  location String
  title String
  description String @db.LongText
  image String
  technologies Json
  extraLinks Json
  type String
  landingDescription String
}

model Formation {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  duration String
  location String
  title String
  description String @db.LongText
  image String
  technologies Json
  extraLinks Json
  speciality String
  landingDescription String
}

model Projet {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  title String
  duration String
  location String
  description String @db.LongText
  image String
  technologies Json
  extraLinks Json
  littleDescription String
  landingDescription String
}

model Skill {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  description String
  level Int
}

model Configuration {
  mail String @id
  location String
  github String
  linkedin String
  landingText String @db.LongText
}